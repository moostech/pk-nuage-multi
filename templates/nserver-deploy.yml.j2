---
- hosts: nserver
  gather_facts: no
  remote_user: centos
  become: true
  become_method: sudo
  vars:
# Ansible vars for DNS service 
{% for server in core_instances %}
{% if server.inventory == 'nserver' %}
    ansible_hostname: {{ server.interfaces[0].ip }}
{% endif %}
{% endfor %}
    named_group: named
    named_owner: named
    bind_acls:
      - name: acl1
        match_list:
{% for server in core_instances %}
{% if server.inventory == 'nserver' %}
          - {{ server.interfaces[0].ip | regex_replace('^([0-9]*\.[0-9]*\.[0-9]*)\.[0-9]*$', '\\1') }}.0/24
{% endif %}
{% endfor %}
      - name: acl2
        match_list:
          - 10.0.0.0/8
{% for server in core_instances %}
{% if server.inventory == 'nserver' %}
{% if server.interfaces[1] is defined %}
          - {{ server.interfaces[1].ip | regex_replace('^([0-9]*\.[0-9]*\.[0-9]*)\.[0-9]*$', '\\1') }}.0/24
{% endif %}
{% if server.interfaces[2] is defined %}
          - {{ server.interfaces[2].ip | regex_replace('^([0-9]*\.[0-9]*\.[0-9]*)\.[0-9]*$', '\\1') }}.0/24
{% endif %}
{% endif %}
{% endfor %}
    bind_listen_ipv4:
      - any
    bind_allow_query:
{% for server in core_instances %}
{% if server.inventory == 'nserver' %}
      - {{ server.interfaces[0].ip | regex_replace('^([0-9]*\.[0-9]*\.[0-9]*)\.[0-9]*$', '\\1') }}.0/24
{% if server.interfaces[1] is defined %}
      - {{ server.interfaces[1].ip | regex_replace('^([0-9]*\.[0-9]*\.[0-9]*)\.[0-9]*$', '\\1') }}.0/24
{% endif %}
{% if server.interfaces[2] is defined %}
      - {{ server.interfaces[2].ip | regex_replace('^([0-9]*\.[0-9]*\.[0-9]*)\.[0-9]*$', '\\1') }}.0/24
{% endif %}
{% endif %}
{% endfor %}
      - 127.0.0.0/8
    bind_recursion: true
    bind_forwarders:
      - 8.8.8.8
      - 4.4.4.4
    bind_zone_name: {{ dns_domain }}
    bind_zone_networks:
{% for server in core_instances %}
{% if server.inventory == 'nserver' %}
      - '{{ server.interfaces[0].ip | regex_replace('^([0-9]*\.[0-9]*\.[0-9]*)\.[0-9]*$', '\\1') }}'
{% endif %}
{% endfor %}
{% for server in core_instances %}
{% if server.inventory == 'nserver' %}
    bind_zone_master_server_ip: {{ server.interfaces[0].ip }}
{% endif %}
{% endfor %}
    bind_zone_name_servers:
      - ns1
    bind_zone_hosts:
      - name: ns1
{% for server in core_instances %}
{% if server.inventory == 'nserver' %}
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% endfor %}
        aliases:
          - ntp
          - dns
      - name: '@'
{% for server in core_instances %}
{% if server.inventory == 'nserver' %}
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% endfor %}
{% for server in core_instances %}
{% if server.inventory == 'vsd' %}
      - name: vsd1
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% endfor %}
{% for vsc in vsc_controllers %}
{% if 'vsc1' in vsc.hostname  %}
      - name: vsc1
        ip: {{ vsc.interfaces[1].ip }}
{% endif %}
{% if 'vsc2' in vsc.hostname  %}
      - name: vsc2
        ip: {{ vsc.interfaces[1].ip }}
{% endif %}
{% if 'vsc3' in vsc.hostname  %}
      - name: vsc3
        ip: {{ vsc.interfaces[1].ip }}
{% endif %}
{% if 'vsc4' in vsc.hostname  %}
      - name: vsc4
        ip: {{ vsc.interfaces[1].ip }}
{% endif %}
{% endfor %}
{% for server in core_instances %}
{% if server.inventory == 'util' %}
      - name: util
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% endfor %}
{% for server in core_instances %}
{% if server.inventory == 'stat' %}
      - name: stat
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% endfor %}

{% if k8s_instances is defined %}
{% for server in k8s_instances %}
{% if server.inventory == 'kubernetes' %}
{% if 'k8s-master' in server.hostname  %}
      - name: k8s-master
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% if 'k8s-node1' in server.hostname  %}
      - name: k8s-node1
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% if 'k8s-node2' in server.hostname  %}
      - name: k8s-node2
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% if 'k8s-node3' in server.hostname  %}
      - name: k8s-node3
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% if 'k8s-node4' in server.hostname  %}
      - name: k8s-node4
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% endif %}
{% endfor %}

{% for server in k8s_instances %}
{% if server.inventory == 'docker' %}
{% if 'docker' in server.hostname  %}
      - name: docker
        ip: {{ server.interfaces[0].ip }}
{% endif %}
{% endif %}
{% endfor %}
{% endif %}

    bind_zone_services:
      - name: _xmpp-client._tcp
        weight: 10
        port: 5222
{% for server in core_instances %}
{% if server.inventory == 'vsd' %}
        target: {{ server.hostname }}
{% endif %}
{% endfor %}
# ntp vars
{% for server in core_instances %}
{% if server.inventory == 'nserver' %}
    ntp_restrict_net: {{ server.interfaces[0].ip | regex_replace('^([0-9]*)\.[0-9]*\.[0-9]*\.[0-9]*$', '\\1') }}.0.0.0
{% endif %}
{% endfor %}
    ntp_restrict_mask: 255.0.0.0

# defined roles       
  roles:
    - bind-install
    - ntp-install
